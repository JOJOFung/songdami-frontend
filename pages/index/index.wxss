/*User info*/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  text-align: center;
}

/*Menu*/
.menu {
  margin-top: 70px;
}

.menu .menu-item{
  margin-top: 30px;
}

/*Hide some menu items under development*/
.donotdisplay{
  display: none;
}